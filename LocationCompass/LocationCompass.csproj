<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>LocationCompass</AssemblyName>
    <RootNamespace>LocationCompass</RootNamespace>
    <Version>1.3.1</Version>
    <TargetFramework>net452</TargetFramework>
    <PlatformTarget>x86</PlatformTarget>
	<StartAction>Program</StartAction>
    <StartProgram>E:\Steam\steamapps\common\Stardew Valley\StardewModdingAPI.exe</StartProgram>
    <StartWorkingDirectory>E:\Steam\steamapps\common\Stardew Valley</StartWorkingDirectory>
  </PropertyGroup>

  <Import Project="..\LocationUtil\LocationUtil.projitems" Label="Shared" />

  <ItemGroup>
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="3.0.0-beta.8" />
  </ItemGroup>

  <ItemGroup>
    <None Update="assets\locator.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="constants.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="manifest.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
